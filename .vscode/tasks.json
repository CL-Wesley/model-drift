{
	"version": "2.0.0",
	"tasks": [
		{
			"label": "Start Frontend Development Server",
			"type": "shell",
			"command": "npm start",
			"isBackground": true,
			"problemMatcher": [],
			"group": "build",
			"options": {
				"cwd": "${workspaceFolder}/frontend"
			},
			"presentation": {
				"echo": true,
				"reveal": "always",
				"focus": false,
				"panel": "new"
			}
		},
		{
			"label": "Build Frontend",
			"type": "shell",
			"command": "npm run build",
